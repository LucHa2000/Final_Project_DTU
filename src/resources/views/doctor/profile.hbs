<div class="app-container flex flex-col homepage-container">
  {{>nav}}
  <main class="app__main flex w-full">
    <div class="medicals__sidenav max-w-[70px] mt-[100px]">
      <ul class="medicals__sidenav__list flex flex-col justify-center">
        <li class="medicals__sidenav__item medicals__sidenav__item">
          <a href="#" class="medicals__sidenav__link"><i
              class="fa-solid fa-calendar-days medicals__sidenav__icon"
            ></i></a>
        </li>
        <li class="medicals__sidenav__item medicals__sidenav__item">
          <a href="/" class="medicals__sidenav__link"><i
              class="medicals__sidenav__icon  fa-solid fa-user-doctor"
            ></i></a>
        </li>
        <li class="medicals__sidenav__item medicals__sidenav__item">
          <a href="/inbox" class="medicals__sidenav__link"><i
              class="medicals__sidenav__icon fa-brands fa-rocketchat"
            ></i></a>
        </li>
        <li class="medicals__sidenav__item medicals__sidenav__item">
          <a href="/user" class="medicals__sidenav__link"><i
              class="medicals__sidenav__icon medicals__sidenav__icon--active fa-solid fa-gear"
            ></i></a>
        </li>
      </ul>
    </div>
    <div class="app-section overflow-y-scroll">
      <h2 class="app-section__header">Trang cá nhân</h2>
      <div class="app-section__content">
        <div >
          <input  name="id" type="text" value="{{account.id}}" hidden >
          <div class="is-row flex items-center justify-center">
           
              <div class="relative">
                <img id="profile-avatar" class="w-36 h-36 rounded-full" src="../uploads/{{account.image}}" alt="">
                
              </div>
            
            
          </div>
          <div class="is-row">
            <div class="is-full ">
              <label class="block mb-2 text-sm text-gray-900 font-bold">Xu của bạn</label>
              <div class="relative">
                  <p class="text-xl">{{account.balance}}</p>
              </div>
              
            </div>
          </div>
          
          <div class="is-row">
            
            <div class="is-one-third ">
              <label class="block mb-2 text-sm  text-gray-900 font-bold">Tên</label>
              <div class="relative">
                <p id="first-name" name="firstName" class="">{{account.firstName}}</p>
              </div>
            </div>
            <div class="is-one-third ">
              <label class="block mb-2 text-sm  text-gray-900 font-bold">Họ</label>
              <div class="relative">
                <p id="first-name" name="firstName" class="">{{account.lastName}}</p>
              </div>
            </div>
            <div class="is-one-third ">
              <label class="block mb-2 text-sm  text-gray-900 font-bold">Email</label>
              <div class="relative">
                <p id="first-name" name="firstName" class="">{{account.email}}</p>
              </div>
            </div>
            
          </div>
          <div class="is-row">
            <div class="is-one-third">
              <label class="block mb-2 text-sm  text-gray-900 font-bold">Số điện thoại</label>
              <div class="relative">
                <p id="first-name" name="firstName" class="">{{account.phoneNumber}}</p>
              </div>
            </div>
            <div class="is-one-third ">
              <label class="block mb-2 text-sm  text-gray-900 font-bold">Địa chỉ</label>
              <div class="relative">
                <p id="first-name" name="firstName" class="">{{account.address}}</p>
              </div>
            </div>
            <div class="is-one-third ">
              <label class="block mb-2 text-sm  text-gray-900 font-bold">Hồ sơ</label>
              <div class="relative">
                <a href="/doctor/resume" class="bg-blue-100 hover:bg-blue-200 text-blue-800 text-sm font-semibold mr-2 px-2.5 py-0.5 rounded">Xem hồ sơ của bạn</a>
              </div>
            </div>
          </div>
          
          <div class="is-row flex justify-end">
            <a href="/doctor/updateAccount" class="btn--primary mr-4 block text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5   py-2.5 text-center" type="button" >
              Cập nhật
            </a>
        
          </div>
          
          
          
        </div>

        </div>
        
      </div>
    </div>
    
  </main>
</div>

