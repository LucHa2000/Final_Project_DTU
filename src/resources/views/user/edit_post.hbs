<html lang="en">
  <body>
    {{>header}}
    <main id="main " class="subpage-main account-settings-page">
      <div class="container-user">
            <h2 class="title">Edit your post</h2>
          <div class="main-account-settings-container">
            <div class="d-flex">
              <div class="left">
                <div class="user-pf-img">
                  <img src="../uploads/{{avatar}}" alt="Avatar">
                </div>
                <span class="user-fullname">@{{username}}</span>
                <a href="/user_account/view" class="collection-item  is-active first-child">Account Settings</a>
                <a href="/auth/logout" class="collection-item">Logout</a>
              </div>
              <div class="right">
                <form class="col s12"  method="POST"  action="/profile/update" enctype="multipart/form-data">
                  <div class="row">
                    <div class=" col s12 m12 ">
                      <div class="lbl-notation">
                        <span>Content</span>
                        <span class="notation">Content Post</span>
                      </div>
                      <input  type="Text" class="validate" name="job" value="{{post.post_content}}">
                    </div>
                  </div>
                  <div class="row">
                    <div class="file-field input-field col s5 m12">
                     <div class="btn btn-active">
                     <span>Change avatar</span>
                     <input type="file" name="image">
                      </div>
                      <div class="file-path-wrapper">
                         <input class="file-path validate" type="text" value="{{post.post_img}}" name="img_old">
                          <img src="../uploads/{{post.post_img}}" style="height:300px;" alt="post-img">
                      </div>
                       </div>
                  </div>
                  <button onclick="return confirm('Are you sure update ?')" class="btn btn-active" type="submit">Update</button>
                </form>
              </div>
            </div>
          </div>
        </div> 
      </div>
    </main>
  </body>
</html>
