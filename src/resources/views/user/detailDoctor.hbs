<div class="app-container flex flex-col homepage-container">
  {{>nav}}
  <main class="app__main flex w-full">
    <div class="medicals__sidenav max-w-[70px] mt-[100px]">
      <ul class="medicals__sidenav__list flex flex-col justify-center">
        <li class="medicals__sidenav__item medicals__sidenav__item">
          <a href="#" class="medicals__sidenav__link"><i
              class="fa-solid fa-calendar-days medicals__sidenav__icon"
            ></i></a>
        </li>
        <li class="medicals__sidenav__item medicals__sidenav__item">
          <a href="/" class="medicals__sidenav__link"><i
              class="medicals__sidenav__icon medicals__sidenav__icon--active fa-solid fa-user-doctor"
            ></i></a>
        </li>
        <li class="medicals__sidenav__item medicals__sidenav__item">
          <a href="/inbox" class="medicals__sidenav__link"><i
              class="medicals__sidenav__icon fa-brands fa-rocketchat"
            ></i></a>
        </li>
        <li class="medicals__sidenav__item medicals__sidenav__item">
          <a href="#" class="medicals__sidenav__link"><i
              class="medicals__sidenav__icon fa-solid fa-gear"
            ></i></a>
        </li>
      </ul>
    </div>
    <div class="app-section overflow-y-scroll">

       
    {{!-- show message when booking successful  --}}
            {{#if messageBooking }}
            <div id="toast-success" class="flex items-center w-full max-w-xs p-4 mb-4 text-gray-500 bg-white rounded-lg shadow dark:text-gray-400 dark:bg-gray-800" role="alert">
              <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-green-500 bg-green-100 rounded-lg dark:bg-green-800 dark:text-green-200">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
              </div>
              <div class="ml-3 text-sm font-normal">{{messageBooking}}</div>
              <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-white text-gray-400 hover:text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex h-8 w-8 dark:text-gray-500 dark:hover:text-white dark:bg-gray-800 dark:hover:bg-gray-700" data-dismiss-target="#toast-success" aria-label="Close">
                  <span class="sr-only">Close</span>
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
              </button>
            </div>
            {{/if}} 

      <h2 class="app-section__header">Doctors</h2>
      <div class="app-section__content">
        <div
          class="app-section__status flex md:flex-row flex-col flex-start w-full my-3"
        >
          <div class="status__item mr-5">
            <h3 class="status__number fw-bold text-2xl">150</h3>
            <p class="status__type">Total</p>
          </div>
          <div class="status__item mr-5">
            <h3 class="status__number fw-bold text-2xl">20</h3>
            <p class="status__type">Experts</p>
          </div>
          <div class="status__item mr-5">
            <h3 class="status__number fw-bold text-2xl">24</h3>
            <p class="status__type">Psychologists</p>
          </div>
        </div>
        <div class="doctor-list w-full">
          <form class="app-container__input md:w-[600px] mx-5">
            <input
              type="search"
              name="search"
              id="search"
              placeholder="Nhập tên bác sỹ, chuyên khoa..."
              class="w-full hidden md:block"
            />
            <button type="submit">
              <i class="fa-solid fa-magnifying-glass app-container__icon"></i>
            </button>
          </form>

          
        
          <!-- ====================== https://tailwindui.com/components/application-ui/elements/dropdowns ====================== -->
    
          <section
            class="app-container__section app-container__section__card w-full mt-[30px] flex flex-row"
          >
            <div
              class="app-container__section__header flex flex-row items-center justify-between w-full flex-1"
            >
              <div class="app-container__section__header__img flex-2">
                <img
                  src={{doctor.image}}
                  class="w-[90px] h-[90px] rounded-full"
                />
              </div>
              <div class="app-container__section__header__content flex-1 px-4">
                <a href="#" class="text-blue-800 font-bold">{{doctor.firstName}} {{doctor.lastName}} (Tư vấn từ xa)</a>
                <p>
               
                </p>

                {{!-- <a href="/detailDoctor/{{this.id}}" style="color:red">Đặt Ngay</a> --}}
              </div>
            </div>
            <div class="app-container__section__content flex-1">
              
                <h3 class="app-container__form__header">
                  LỊCH TƯ VẤN QUA VIDEO
                </h3>
                
                <div class="app-container__form__content flex flex-wrap">
                  <div class="app-container__form__section">
                    {{!-- time render --}}
                    {{#if timeWorks}}
                        {{#each timeWorks}}
                        <form action="/booking/bookingform" method="post" class="app-container__form">
                          <input type="text" name="timeStart" value="{{this.startTime}}" hidden="true">
                          <input type="text" name="timeEnd" value="{{this.endTime}}" hidden="true">
                          <input type="text" name="doctorID" value="{{this.id}}" hidden="true">
                          <input type="text" name="serviceFee" value="{{this.serviceFee}}" hidden="true">
                          <button
                            class="p-2 bg-gray-200 text-green-700 font-bold text-center mr-2 mt-2"
                            type="submit"
                          >
                            {{this.startTime}} -  {{this.endTime}}
                          </button>
                        </form>
                        {{/each}}
                    {{else}}
                              <h1> Hiện tại không có lịch trống </h1>
                    {{/if}}

                  </div>
                  <div class="app-container__form__section mt-5">
                    <p class="">GIÁ TƯ VẤN QUA VIDEO: {{serviceFee.fee}}</p>
                  </div>
                </div>
            </div>
          </section>
             <section
            class="app-container__section app-container__section__card w-full mt-[30px] flex flex-row"
          >
            <div
              class="app-container__section__header flex flex-row items-center justify-between w-full flex-1"
            >
              {{!-- resume --}}
            </div>
            <div class="app-container__section__content flex-1">
                     {{doctor.resumeTitle}}
                <br>
                {{doctor.resumeDescription}}
            </div>
          </section>
        </div>
      </div>
    </div>
  </main>
</div>

