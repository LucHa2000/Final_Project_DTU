
<script src ="../../../public/script/inbox.js"></script>
<script src="socket.io/socket.io.js"></script>
<script src = "./script/inbox.js"></script>
<style>
  .collection-item{
    cursor: pointer;
  }
</style>
{{>header}}
<div class="container-user inbox-container">
  <aside id="sidenav-open">
    <nav>
      <h2 class="sidenav-title">Chat room</h2>
      <div class="sidenav-section">
        <h3>DIRECT MESSAGES</h3>
        <ul>
          {{#each follower}}
            <li  class="collection-item">{{this.follower_username}}</li>
          {{/each}}
        </ul>
      </div>
      <div class="sidenav-section">
        <h3>CHANNELS</h3>
      </div>
      
    </nav>
  </aside>
  <main class="chat-main" id="main">
    <div class="container-chat">
      <p id="username" hidden>{{account}}</p>
      <button type="submit"  id="close-boxchat" class="waves-effect waves-light btn-small right">Close</button>
      <div class="card chatbox" style="">
        <div id="chat-content" class="left"> 
          <p id="notification-focus"></p>        
        </div>
      </div>
      <div class="message">
        <textarea placeholder="message" id="message-inbox" class="materialize-textarea-" required></textarea> 
          <a id="emoji-btn" class="waves-effect waves-light btn modal-trigger" href="#modal1"><span class="material-icons">emoji_emotions</span></a>
        <button id="send-message" class="waves-effect waves-light btn btn-small"><span class="material-icons">send</span></button>
      </div>
    </div>
  </main>
</div>  
  
<div id="modal1" class="modal">
  <div class="modal-content center">
    <h4 class="center">Emoticon</h4>
