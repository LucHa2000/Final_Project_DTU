{{!-- modal add group --}}
  <div id="add-group" class="modal">
    <div class="modal-content">
      <h4>Create Group</h4>
  <div class="row">
    <form class="col s12"  action="/crew/add" method="POST" enctype="multipart/form-data">
      <div class="row">
        <div class="input-field col s12">
          <input id="group_name" type="text" class="validate" name="crew_name">
          <label for="group_name">Group Name</label>
        </div>
      </div>
        <div class="row">
        <div class="input-field col s12">
          <input id="title" type="text" class="validate" name="crew_title">
          <label for="title">Title</label>
        </div>
      </div>
      <div class="row">
          <div class="file-field input-field">
      <div class="btn">
        <span>Avatar</span>
        <input type="file" name="image">
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text">
      </div>
         </div>
      </div>
      <button class="btn center" type="submit"> Create </button>
    </form>
  </div>
    </div>
  </div>
 

    
  