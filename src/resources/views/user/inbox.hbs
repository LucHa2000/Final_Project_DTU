

<style>
   .message-sender{
      text-align: right;
   }
   .message-receiver{
     text-align: left;
   }
</style>
<div class="container"> 

   <h1> Register</h1>
  <div class="row">
    <div class="col s12">
      <div class="row">
        <h1>Your Account :</h1>
        <h1 class="accountName">{{account.firstName}} {{account.lastName}}</h1>
        <h1 class="accountID">{{account.id}}</h1>
        <div>
          <h1> Inbox for Other Appointments : </h1>
          <ul>
              <li class="user-chat btn" >
                {{account.room}}
              </li>
              <li class="user-chat btn " id="roomID" >
                {{roomID}}
              </li>
            
              <br>       
          </ul>
          
        </div>
      </div>
    </div>
  </div>

  <div class="inbox-container"> 
      {{!-- chatting container --}}
      <div class="row chatting-container">
        <div class="row">
            <div id="room-container">
              <h1 class="">Room :  {{account.room}} </h1>
              <h1 id="room-name"></h1>
            </div>
            <div class="input-field col s6">
            <input placeholder="Placeholder" id="message-inbox" type="text" class="validate">
            <a  class="waves-effect waves-light btn modal-trigger " href="#icon-modal">
              <span class="material-icons material-icons-light">emoji_emotions</span>
            </a>
            <label >Message</label>
            <button class="btn" id="send-message">send message</button>
        </div>
      </div>
        {{!-- <div class="row">
          <h1>send image</h1>
           <input type="file" id="uploadfile">
        </div> --}}
      </div>
      {{!-- display conversation --}}
      <div class="row">
        <div class="col s6">
          <h1>Conversation</h1>
          <div class="display-conversation-container">
            <ul class="collection with-header chat-container">
              </ul>
          </div>
        </div>
      </div>
  </div>

</div>

