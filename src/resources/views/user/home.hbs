<div class="app-container flex flex-col homepage-container">
  <div class="medicals__navbar flex justify-between items-center py-3">
    <div class="medicals__navbar__left flex flex-start items-center flex-1">
      <div class="medicals__navbar__brand flex flex-start items-center">
        <img
          src="../img/logoweb.png"
          alt="logo"
          class="medicals__navbar__logo w-[30px] h-[30px]"
        />
        <a class="text-xl fw-bold ml-4">MedicalS</a>
      </div>
      <div
        class="app-container__input medicals__navbar__search md:w-[600px] mx-5"
      >
        <input
          type="search"
          name="search"
          id="search"
          placeholder="Enter email, meeting..."
          class="w-full hidden md:block"
        />
        <button type="submit">
          <i class="fa-solid fa-magnifying-glass app-container__icon"></i>
        </button>
      </div>
    </div>
    <div class="medicals__navbar__right flex-2 flex items-center flex-end">
      <a href="#" class="medicals__navbar__link">
        <i class="app-container__icon fa-solid fa-bell mr-4"></i>
      </a>
      <div class="medicals__navbar__profile">
        <a href="/auth/login">Login</a>
      </div>
    </div>
  </div>
  <main class="app__main flex w-full">
    <div class="medicals__sidenav max-w-[70px] mt-[100px]">
      <ul class="medicals__sidenav__list flex flex-col justify-center">
        <li class="medicals__sidenav__item medicals__sidenav__item">
          <a href="#" class="medicals__sidenav__link"><i
              class="fa-solid fa-calendar-days medicals__sidenav__icon"
            ></i></a>
        </li>
        <li class="medicals__sidenav__item medicals__sidenav__item">
          <a href="/" class="medicals__sidenav__link"><i
              class="medicals__sidenav__icon medicals__sidenav__icon--active fa-solid fa-user-doctor"
            ></i></a>
        </li>
        <li class="medicals__sidenav__item medicals__sidenav__item">
          <a href="/inbox" class="medicals__sidenav__link"><i
              class="medicals__sidenav__icon fa-brands fa-rocketchat"
            ></i></a>
        </li>
        <li class="medicals__sidenav__item medicals__sidenav__item">
          <a href="/account" class="medicals__sidenav__link"><i
              class="medicals__sidenav__icon fa-solid fa-gear"
            ></i></a>
        </li>
      </ul>
    </div>
    <div class="app-section overflow-y-scroll">
      <h2 class="app-section__header">Doctors</h2>
      <div class="app-section__content">
        <div
          class="app-section__status flex md:flex-row flex-col flex-start w-full my-3"
        >
          <div class="status__item mr-5">
            <h3 class="status__number fw-bold text-2xl">150</h3>
            <p class="status__type">Total</p>
          </div>
          <div class="status__item mr-5">
            <h3 class="status__number fw-bold text-2xl">20</h3>
            <p class="status__type">Experts</p>
          </div>
          <div class="status__item mr-5">
            <h3 class="status__number fw-bold text-2xl">24</h3>
            <p class="status__type">Psychologists</p>
          </div>
        </div>
        <div class="doctor-list w-full">
          <form class="app-container__input md:w-[600px] mx-5">
            <input
              type="search"
              name="search"
              id="search"
              placeholder="Nhập tên bác sỹ, chuyên khoa..."
              class="w-full hidden md:block"
            />
            <button type="submit">
              <i class="fa-solid fa-magnifying-glass app-container__icon"></i>
            </button>
          </form>
          <section class="app-container__section w-full mt-[30px]">
            <div
              class="app-container__section__header flex flex-row items-center justify-between w-full"
            >
              <div
                class="app-container__section__header__left flex flex-col flex-start"
              >
                <h3 class="app-container__section__title text-xl font-bold">
                  Chuyên khoa phổ biến
                </h3>
                <h4 class="app-container__section__subtitle">
                  Những chuyên khoa phổ biến của
                </h4>
              </div>
              <div class="app-container__section__header__right flex">
                <a href="#" class="btn--primary">XEM THÊM</a>
              </div>
            </div>
            <div class="app-container__section__content">
              <div
                class="main-carousel mt-4"
                data-flickity='{ "groupCells": true, "autoPlay": true, "cellAlign": "left"  }'
              >
                {{#each clinics}}
                <div
                  class="carousel-cell bg-gray-200 w-[250px] h-[250px] p-3 mx-1 rounded-lg flex flex-col justify-between"
                >
                <a href="/clinics/{{this.id}}">
                  <div class="carousel-cell__header"></div>
                  <div
                    class="carousel-cell__content flex flex-col justify-between h-full"
                  >
                    <img
                      src={{this.image}}
                      alt="image"
                      class="carousel-cell__image"
                    />
                    <p class="carousel-cell__desc flex-end">
                      {{this.name}}
                    </p>
                  </div>
                </a>
                </div>
                {{/each}}
              </div>
            </div>
          </section>
          <section class="app-container__section w-full mt-[100px]">
            <div
              class="app-container__section__header flex flex-row items-center justify-between w-full"
            >
              <div
                class="app-container__section__header__left flex flex-col flex-start"
              >
                <h3 class="app-container__section__title text-xl font-bold">
                  Danh sách bác sĩ
                </h3>
                <h4 class="app-container__section__subtitle">
                  Chúng tôi có đội ngũ bác sĩ đầy kinh nghiệm và kiến thức
                  chuyên sâu
                </h4>
              </div>
              <div class="app-container__section__header__right flex">
                <a href="#" class="btn--primary">XEM THÊM</a>
              </div>
            </div>
            <div class="app-container__section__content w-full">
              <div
                class="main-carousel mt-4"
                data-flickity='{ "groupCells": true, "autoPlay": true, "cellAlign": "left"  }'
              >
                {{#each doctors}}
                <div
                  class="carousel-cell bg-gray-200 w-[250px] h-[250px] p-3 mx-1 rounded-lg flex flex-col justify-between"
                >
                <a href="/detailDoctor/{{this.id}}"> 
                  <div class="carousel-cell__header"></div>
                  <div
                    class="carousel-cell__content flex flex-col justify-between h-full"
                  >
                    <img
                      src={{this.image}}
                      alt="image doctor"
                      class="carousel-cell__image rounded-full mx-auto w-[150px] h-[150px]"
                    />
                    <p class="carousel-cell__desc flex flex-col items-center">
                      <span>Bác sĩ Chuyên khoa II</span>
                      <span>{{this.firstName}} {{this.lastName}}</span>
                      <span>{{this.clinicName}}</span>
                    </p>
                  </div>
                </a>
                </div>
                {{/each }}
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </main>
</div>